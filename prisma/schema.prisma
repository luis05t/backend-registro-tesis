generator client {
  provider = "prisma-client"
  output   = "../src/prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  image    String?
  roleId   String
  role     Role    @relation(fields: [roleId], references: [id])
  careerId String
  career   Career  @relation(fields: [careerId], references: [id])

  projects        UserProject[]
  createdProjects Project[]     @relation("UserCreatedProjects")
  
  // --- NUEVO: Relación para las habilidades creadas por el usuario ---
  createdSkills   Skills[]      @relation("UserCreatedSkills") 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?

  users       User[]
  permissions RolePermission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  roles       RolePermission[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String
  permissionId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@unique([roleId, permissionId])
}

model Career {
  id   String @id @default(uuid())
  name String

  users    User[]
  projects Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id              String   @id @default(uuid())
  name            String
  description     String
  status          String   @default("in-progress")
  problems        String?
  summary         String?
  objectives      String[]
  cycle           String?
  academic_period String?
  deliverables    String[] @default([])

  startDate DateTime?
  endDate   DateTime?

  createdBy String?
  user      User?   @relation(fields: [createdBy], references: [id], name: "UserCreatedProjects")
  careerId  String
  career    Career  @relation(fields: [careerId], references: [id])

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  userProjects  UserProject[]
  projectSkills projectSkills[]
}

model UserProject {
  id        String @id @default(uuid())
  userId    String
  projectId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model Skills {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  details     Json?

  // --- NUEVO: Campos para identificar al dueño de la habilidad ---
  createdById String?
  createdBy   User?   @relation("UserCreatedSkills", fields: [createdById], references: [id])

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  projectSkills projectSkills[]
}

model projectSkills {
  id        String @id @default(uuid())
  projectId String
  skillId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  skill   Skills  @relation(fields: [skillId], references: [id])

  @@unique([projectId, skillId])
}